{
  "name": "bootstrap-fontawesome-sass-project",
  "version": "1.0.0",
  "description": "A project using Bootstrap 5.2, Font Awesome, and Sass",
  "main": "index.html",
  "scripts": {
    "sass": "sass scss/style.scss assets/css/style.css",
    "sass-watch": "sass --watch scss:assets/css",
    "sass-prod": "sass scss/style.scss assets/css/style.css --style=compressed --no-source-map",
    "build": "npm run sass-prod",
    "start": "npm run sass-watch"
  },
  "keywords": [
    "bootstrap",
    "sass",
    "fontawesome"
  ],
  "author": "Your Name",
  "license": "MIT",
  "devDependencies": {
    "sass": "^1.62.0"
  },
  "dependencies": {
    "bootstrap": "^5.3.8"
  }
}
